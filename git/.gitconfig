# This is Git's per-user configuration file.
[core]
	user = Alyssa Ross
	email = hi@alyssa.is
	excludesfile = ~/.gitignore_global
[user]
	name = Alyssa Ross
	email = hi@alyssa.is
[alias]
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[push]
	default = current
[merge]
	conflictstyle = diff3
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
